<Page
    x:Class="V2EX.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:V2EX.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Padding="20" Grid.Row="0">
            <TextBlock FontSize="40" VerticalAlignment="Center" Padding="0, 0, 0, 10">V2Explorer</TextBlock>
            <TextBlock Padding="0, 0, 0, 12">「大人の階段昇る、君はまだシンデレラさ」</TextBlock>
            <TextBlock>一个奇怪的 V2EX UWP 客户端.</TextBlock>
        </StackPanel>

        <StackPanel Padding="20" Grid.Row="1">
            <TextBlock>© 2017 LancerComet</TextBlock>
            <TextBlock># Carry Your World #</TextBlock>
        </StackPanel>

        <StackPanel Padding="20, 0" Grid.Row="2">
            <TextBlock>V2Explorer is released under MIT License.</TextBlock>
        </StackPanel>
    </Grid>
</Page>
